<div class=" card mb-3">
  <div class=" row col-md-12">
    <div class="col-md-4">
      <img class="img-responsive center-block m-5" src="{{user.image}}"
        style="width: 375px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">

    </div>
    <div class="col-md-8 p-5">
      <ul class="list-unstyled">
        <li class="mb-4"> {{user.name}}</li>
        <li class="mb-4"> {{user.email}}</li>
        <li class="">{{filterComments.length}} 已評論餐廳</li>
        <li class="">{{user.FavoriteRestaurant.length}} 收藏的餐廳</li>
        <li class="">{{user.Followings.length}} followings(追蹤中)</li>
        <li class="mb-4">{{user.Followers.length}} followers(跟隨者)</li>
        {{#ifCond user.id userSelf.id}}
        <a href="/users/{{user.id}}/edit" class="btn btn-primary">Edit</a>
        {{/ifCond}}
      </ul>
    </div>
  </div>
</div>
<div class="col-md-12">
  <div class="row">
    <div class="col-4">
      <div class="card mb-4">
        <div class="card-header">
          {{user.Followings.length}} followings(追蹤中)
        </div>
        <div class=" card-body">
          {{#each user.Followings}}
          {{#if this.image}}
          <img src="{{this.image}}" width="90px" height="90px" style="transition: opacity 0.5s; opacity:0;"
            onload="this.style.opacity=1;" />
          {{else}}
          <img src="https://fakeimg.pl/90/" width="90px" height="90px" />
          {{/if}}
          {{/each}}
        </div>
      </div>

      <div class="card">
        <div class="card-header">
          {{user.Followers.length}} followers(跟隨者)
        </div>
        <div class=" card-body">
          {{#each user.Followers}}
          {{#if this.image}}
          <img src="{{this.image}}" width="90px" height="90px" style="transition: opacity 0.5s; opacity:0;"
            onload="this.style.opacity=1;" />
          {{else}}
          <img src="https://fakeimg.pl/90/" width="90px" height="90px" />
          {{/if}}
          {{/each}}
        </div>
      </div>
    </div>

    <div class="col-8">
      <div class="card ">
        <div class="card-header">
          {{filterComments.length}} 已評論餐廳
        </div>
        <div class=" card-body">
          {{#each filterComments}}
        {{#if this.Restaurant.image}}
        <img src="{{this.Restaurant.image}}" width="90px" height="90px" style="transition: opacity 0.5s; opacity:0;"
          onload="this.style.opacity=1;" />
        {{else}}
        <img src="https://fakeimg.pl/90/" width="90px" height="90px" />
        {{/if}}
          {{/each}}
        </div>
      </div>

      <div class="card ">
        <div class="card-header">
          {{user.FavoriteRestaurant.length}} 收藏的餐廳
        </div>
        <div class=" card-body">
          {{#each user.FavoriteRestaurant}}
          {{#if this.image}}
          <img src="{{this.image}}" width="90px" height="90px" style="transition: opacity 0.5s; opacity:0;"
            onload="this.style.opacity=1;" />
          {{else}}
          <img src="https://fakeimg.pl/90/" width="90px" height="90px" />
          {{/if}}
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>